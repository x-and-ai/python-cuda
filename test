# The main test script to clean, build, and test a new image

source config

# Clean up old containers and images
source clean

# Build test image
docker build --tag=${TEST_IMAGE_NAME} .

# Run a test container
TEST_SCRIPT="nvidia-smi"
docker run --rm -it --runtime=nvidia --name $TEST_CONTAINER_NAME $TEST_IMAGE_NAME bash -c "${TEST_SCRIPT}"
